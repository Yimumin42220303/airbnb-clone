# Database (PostgreSQL - Vercel 배포용)
# Neon: https://neon.tech → 프로젝트 생성 후 Connection string 복사
# Supabase: 대시보드 → Project Settings → Database 에서 Connection string 복사
# DATABASE_URL="postgresql://user:pass@host/db?sslmode=require"
# DIRECT_URL="postgresql://user:pass@host:5432/db"  # Neon은 DATABASE_URL과 동일해도 됨
DATABASE_URL=""
DIRECT_URL=""

# NextAuth (필수 - 구글 로그인 사용 시에도 반드시 설정)
# NEXTAUTH_SECRET: 터미널에서 openssl rand -hex 32 실행 후 나온 값
NEXTAUTH_SECRET="openssl rand -hex 32 로 생성한 랜덤 문자열"
NEXTAUTH_URL="http://localhost:3000"

# OAuth - 구글 로그인 (docs/OAUTH_SETUP.md 1번 참고)
# Google Cloud Console → 사용자 인증 정보 → OAuth 2.0 클라이언트 ID (웹) → 승인된 리디렉션 URI 에 http://localhost:3000/api/auth/callback/google 추가
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# 카카오: https://developers.kakao.com/console/app → 카카오 로그인 → 웹 → REST API 키, 시크릿
KAKAO_CLIENT_ID=""
KAKAO_CLIENT_SECRET=""

# 네이버: https://developers.naver.com/apps → 애플리케이션 등록 → Client ID, Client Secret
NAVER_CLIENT_ID=""
NAVER_CLIENT_SECRET=""

# 개발기간 한정: 로그인 없이 모든 페이지 접근 허용 (배포 시 제거)
# DEV_SKIP_AUTH=1

# 히어로 비디오 배경 (선택) - 미설정 시 Framer 기본 URL 사용
# NEXT_PUBLIC_HERO_VIDEO_URL="https://example.com/hero.mp4"

# 포트원(KG이니시스) PG - 카드/간편결제 (예약 확인 페이지에서 결제하기 사용 시)
# https://portone.io 콘솔 → 채널 → KG이니시스 등 연동 후 Store ID, Channel Key 복사
# NEXT_PUBLIC_PORTONE_STORE_ID="store-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
# NEXT_PUBLIC_PORTONE_CHANNEL_KEY="channel-key-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# 이메일 발송 (Resend) - 회원가입 이메일 인증용
# https://resend.com 가입 → API Keys → Create API Key
# 도메인 미인증 시: onboarding@resend.dev 사용 (무료 100통/일)
# 도메인 인증 후: EMAIL_FROM="도쿄민박 <noreply@tokyominbak.net>" 등
RESEND_API_KEY=""
EMAIL_FROM="도쿄민박 <onboarding@resend.dev>"

# 이미지 저장소 - Cloudinary (Vercel Blob Forbidden 시 대안, docs/Cloudinary-설정.md)
# CLOUDINARY_CLOUD_NAME=""
# CLOUDINARY_API_KEY=""
# CLOUDINARY_API_SECRET=""

# OpenAI - AI 맞춤 숙소 추천 (gpt-4o-mini)
# https://platform.openai.com/api-keys 에서 API 키 발급
# OPENAI_API_KEY="sk-..."

# 기타 API 키 (결제, 지도 등)
# STRIPE_SECRET_KEY=""
# GOOGLE_MAPS_API_KEY=""
